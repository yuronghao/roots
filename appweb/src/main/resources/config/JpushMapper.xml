<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.emi.emiservice.mapper.JPushMapper" >

    <select id="getMsUndo" resultType="com.emi.emiservice.entity.JPushMessage">
        SELECT * from jpushmessage where state=0;
    </select>


    <update id="uptMsState" parameterType="com.emi.emiservice.entity.JPushMessage">
        update jpushmessage set state=1,sendtime=now() where id=#{id}
    </update>

    <insert id="addMs" parameterType="com.emi.emiservice.entity.JPushMessage">
        insert into jpushmessage(message,extras,ctime,orderid,ordersource) values(#{message},#{extras},now(),#{orderid},#{ordersource});
    </insert>



</mapper>